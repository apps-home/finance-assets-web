{
	"name": "finance-assets-web",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"check": "biome check --write .",
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"dev": "pnpm --filter=web dev",
		"build": "pnpm --filter=web build",
		"check-types": "pnpm -r check-types"
	},
	"dependencies": {
		"@finance-assets-web/env": "workspace:*",
		"@lib/db": "workspace:*",
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@finance-assets-web/config": "workspace:*",
		"@types/node": "^25.0.9",
		"typescript": "catalog:"
	},
	"packageManager": "pnpm@10.15.0"
}
